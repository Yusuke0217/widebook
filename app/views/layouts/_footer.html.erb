<%# pc版のfooter %>
<footer>
  <div class="ft__wrapper">
    <div class="ft__nav">
      <ul class="nav__list">
        <li>
          <div class="ft__nav__how nav__link">
            <%= link_to help_path do %>
              <div class="app__info">
                <p>ヘルプ</p>
              </div>
            <% end %>
          </div>
        </li>
        <li>
          <div class="ft__nav__rule nav__link">
            <%= link_to rule_path do %>
              <div class="rule">
                <p>利用規約</p>
              </div>
            <% end %>
          </div>
        </li>
        <li>
          <div class="ft__nav__privacy nav__link">
            <%= link_to privacy_path do %>
              <div class="privacy">
                <p>プライバシー・ポリシー</p>
              </div>
            <% end %>
          </div>
        </li>
        <li>
          <div class="ft__nav__query nav__link">
            <a href="https://forms.gle/KLpZBEXmdyaG2ibp7" target="blank">
              <div class="query">
                <p>お問い合わせ</p>
              </div>
            <a>
          </div>
        </li>
        <li>
          <div class="ft__nav__query nav__link">
            <%= link_to root_path do %>
              <div class="move__top">
                <p>ユーザートップページ</p>
              </div>
            <% end %>
          </div>
        </li>
        <% if current_owner.nil? %>
        <li>
          <div class="ft__nav__query nav__link">
            <%= link_to owner_login_path do %>
              <div class="owner__login">
                <p>事業者様ログイン</p>
              </div>
            <% end %>
          </div>
        </li>
        <% else %>
        <li>
          <div class="ft__nav__query nav__link">
            <%= link_to dashboards_path(current_owner) do %>
              <div class="move__top">
                <p>オーナートップページ</p>
              </div>
            <% end %>
          </div>
        </li>
        <% end %>
      </ul>
      <div class="copy__write">
        <p>2020 nil inc ©️</p>
      </div>
    </div>
  </div>
</footer>