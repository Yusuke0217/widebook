<%# 検索結果のページ&ビジネスタイプ>カテゴリのページ %>
<% content_for :css do %>
  <%= stylesheet_link_tag '/assets/categories/search-cate', media: "screen and (max-width: 559px)" %>
  <%= stylesheet_link_tag '/assets/categories/tablet/search-cate_tab', media: "screen and (min-width: 560px) and (max-width: 959px)" %>
  <%= stylesheet_link_tag '/assets/categories/pc/search-cate_pc', media: "screen and (min-width: 960px)" %>
<% end %>

<% provide(:text, "その他のカテゴリから探す")%>

<%= render 'layouts/header' %>
  <div class="wrapper">
    <div class="main__wrapper search_pc">
      <div class="ggrmap__back">
        <div class="ggrmap">
          <form id="search-form" action="" method="post">
            <div class="input__area">
              <input id="" type="search" name="search" placeholder="キーワード">
              <button type="submit" form="search-form" name="">
                <i class="fas fa-search"></i>
              </button>
            </div>
          </form>
        </div>
      </div>
      <div class="result__wrapper">
        <div class="result__group">
          <div class="result--icon">
            <i class="fas fa-angle-down"></i>
          </div>
          <div class="result__export">
            <p><%= @shop.count %>件の検索結果</p>
          </div>
          <div class="post__list result-top" id="">
            <h1><%= @category.name %></h1>
            <p></p>
            <div class="move__btn">
              <div class="btn--left">
                <a href="">
                  <i class="fas fa-chevron-left"></i>
                </a>
              </div>
              <div class="btn--right">
                <a href="">
                  <i class="fas fa-chevron-right"></i>
                </a>
              </div>
            </div>
            <ul class="shop__box">
            <% @shop.page(params[:page]).per(20).each do |shop| %>
              <%= link_to shop_path(shop.id) do %>
                <li>
                  <div class="shop__wrapper">
                    <div class="shop__img">
                    <% if shop.image? %>
                      <%= image_tag shop.image.url %>
                    <% else %>
                      <%= image_tag "bg_image4.jpeg" %>
                    <% end %>
                    </div>
                    <div class="shop__info">
                      <div class="shop__info__deco">
                        <div class="shop__review">
                          <i class="fas fa-star"></i>
                          <span></span>
                        </div>
                        <div class="shop__tag">
                          <i class=""></i>
                          <span></span>
                        </div>
                      </div>
                      <div class="shop__info__basic">
                        <div class="shop__name">
                          <h2><%= shop.name %></h2>
                        </div>
                        <div class="shop__about">
                          <div class="shop__place">
                            <div class="address">
                              <span><%= shop.address %></span>
                            </div>
                          </div>
                        </div>
                        <div class="shop__budget">
                          <i class="fas fa-yen-sign"></i>
                          <span></span>
                        </div>
                      </div>
                    </div>
                  </div>
                </li>
              <%end%>
            <% end %>
            </ul>
            <div class="detail__btn shop__more">
              <%= link_to shops_path, class:"detail" do %>
                <span>すべて表示<i></i></span>
              <% end %>
            </div>
          </div>
          <%= render 'layouts/content_box' %>
          <div class="other__list" id="">
            <h1>Caming soon</h1>
            <p></p>
            <div class="move__btn">
              <div class="btn--left">
                <a href="">
                  <i class="fas fa-chevron-left"></i>
                </a>
              </div>
              <div class="btn--right">
                <a href="">
                  <i class="fas fa-chevron-right"></i>
                </a>
              </div>
            </div>
            <ul class="shop__box">
              <%= link_to root_path do %>
                <li>
                  <div class="shop__wrapper">
                    <div class="shop__img">
                      <%= image_tag "" %>
                    </div>
                    <div class="shop__info">
                      <div class="shop__info__deco">
                        <div class="shop__review">
